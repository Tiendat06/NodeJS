<div class='search-form mt-5'>
    <form action=''>
        <div class='form-group'>
            <label for='search-input'>Enter keyword</label>
            <input
                name='q'
                type='text'
                class='form-control'
                id='search-input'
                placeholder='Enter keyword...'
            />
            {{! <input name="fname" type="text" class="form-control" id="search-input" placeholder="Enter keyword...">
            <input name="lname" type="text" class="form-control" id="search-input" placeholder="Enter keyword..."> }}

            {{! <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> }}
        </div>

        <div class='form-group'>
            <label for='search-input'>Gender</label>
            <select name='gender' class='form-control' id='gender-input'>
                <option value=''>--Choose gender--</option>
                <option value='male'>Male</option>
                <option value='female'>Female</option>

            </select>
        </div>

        <button type='submit' class='btn btn-primary'>Search</button>
    </form>
</div>